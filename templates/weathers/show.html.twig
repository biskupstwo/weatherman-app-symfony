{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temp_c</th>
                <td>{{ weather.tempC }}</td>
            </tr>
            <tr>
                <th>Perc_temp_c</th>
                <td>{{ weather.percTempC }}</td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>{{ weather.visibility }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ weather.windSpeed }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ weather.description }}</td>
            </tr>
            <tr>
                <th>Rain_probability</th>
                <td>{{ weather.rainProbability }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather.pressure }}</td>
            </tr>
            <tr>
                <th>Uv_index</th>
                <td>{{ weather.uvIndex }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weathers_index') }}">back to list</a>

    <a href="{{ path('app_weathers_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weathers/_delete_form.html.twig') }}
{% endblock %}
