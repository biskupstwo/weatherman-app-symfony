
{% extends 'base.html.twig' %}
{% block title %}Weather in {{ location.location_name }}, {{ location.country }}{% endblock %}
{% block body %}
   <style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; } </style>
<div class="example-wrapper">
<h1>{{ location.location_name }}, {{ location.country }}</h1>
<ul>
{% for w in weathers %}
<li>{{ w.date|date('d.m.Y') }}: {{ w.temp_c }}&deg;C</br>Opis: {{w.description}}, Ci≈õnienie: {{w.pressure}} hPa</li> {% endfor %}
</ul>
{%if is_granted('ROLE_MEASUREMENT_EDIT') %}
<a href="{{ path('app_weathers_index') }}">Go to weather</a>
<a href="{{ path('app_location_index') }}">Go to location</a>
<a href="{{ path('app_logout') }}">Logout</a>
{% endif %}
{% if not is_granted('ROLE_MEASUREMENT_EDIT') %}
   <a href="{{ path('app_login') }}">Login</a>
{% endif %}
 </div>

   {% endblock %}
